{% form_theme form 'OpensoftCodeConversationBundle:Form:fields.html.twig' %}

<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
    <fieldset>
        <legend>Registration</legend>

        {{ form_errors(form) }}

        <div class="clearfix">
            {{ form_label(form.username)}}
            <div class="input">{{ form_widget(form.username) }}</div>
        </div>

        <div class="clearfix">
            {{ form_label(form.email)}}
            <div class="input">{{ form_widget(form.email) }}</div>
        </div>

        <div class="clearfix">
            <label for="fos_user_registration_form_plainPassword_first" class=" required">Password *</label>
            <div class="input">{{ form_widget(form.plainPassword.first) }}</div>
        </div>

        <div class="clearfix">
            <label for="fos_user_registration_form_plainPassword_second" class=" required">Password (again) *</label>
            <div class="input">{{ form_widget(form.plainPassword.second) }}</div>
        </div>


        {{ form_rest(form) }}

        <div class="actions">
            <input class="btn primary" type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" />
        </div>

    </fieldset>
</form>
