{% extends 'OpensoftCodeConversationBundle::layout.html.twig' %}

{% block content %}

{% include 'OpensoftCodeConversationBundle::project-header.html.twig' with {'project': project} %}

<table cellpadding="0" cellspacing="0">
    <thead>
        <tr>
            <th colspan="2">{{ app.request.get('filepath') }}</th>
        </tr>
    </thead>
    <tbody style="overflow: auto; display:block; width: 938px;">
        {% set i = 1 %}
        {% for line in file %}
            <tr>
                <td style="color: #AAA; padding: 0px 3px; border: none; border-right: 1px solid #DDD; text-align: center; background-color: #f5f5f5; border-radius: 0px;">
                    {{ i }}
                </td>
                <td style="padding: 0px; border: none; background-color: #f5f5f5; ">
                    <pre style="white-space: pre; padding: 0px; margin: 0px; border: none; border-radius: 0px;" class="prettyprint">{{ line }}</pre>
                </td>
            </tr>
            {% set i = i + 1 %}
        {% endfor %}
    </tbody>
</table>
{% endblock %}
