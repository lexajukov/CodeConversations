<table>
    <thead>
        <tr>
            <th style="background-color: #E0EDFF;" colspan="2">
                {{ commit.message|truncate(80) }}
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
            <span class="author-name"><a href="/beberlei">{{ commit.author }}</a></span>
            authored <time class="js-relative-date" datetime="{{ commit.timestamp|date("Y-m-d\TG:i:sO") }}" title="{{ commit.timestamp|date("Y-m-d G:i:s") }}">{{ time_diff(commit.timestamp) }}</time>
            </td>
            <td style="text-align: right;" align="right">
                commit <a href="{{ path('opensoft_codeconversation_project_viewcommit', {'slug': project.slug, 'sha1': commit.sha1 }) }}" class="sha-block"><span class="sha">{{ commit.sha1 }}</span></a>
                {% if commit.parent %}
                    <div class="clear-fix" />
                    1 parent <a href="{{ path('opensoft_codeconversation_project_viewcommit', {'slug': project.slug, 'sha1': commit.parent }) }}" class="sha-block"><span class="sha">{{ commit.parent }}</span></a>
                {% endif %}
            </td>
        </tr>
    </tbody>
</table>