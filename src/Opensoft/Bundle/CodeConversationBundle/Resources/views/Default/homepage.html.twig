{% extends 'OpensoftCodeConversationBundle::layout.html.twig' %}

{% block content %}
    <div>
        {% for project in projects %}
            <div class="project well">
                <h3>{{ project.name }}</h3>

                <ul>
                    <li>Remotes - {{ project.remotes|length }}</li>
                    <li>Pull Requests - {{ project.pullRequests|length }}</li>
                </ul>

                <div class="actions">
                    <a href="{{ path('opensoft_codeconversation_project_show', {'projectName': project.name }) }}" class="btn">Show Project</a>
                    <a href="{{ path('opensoft_codeconversation_pullrequest_create', {'projectName': project.name }) }}" class="btn">Create Pull Request</a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}