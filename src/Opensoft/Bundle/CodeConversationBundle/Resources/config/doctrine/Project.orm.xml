<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
      xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Opensoft\Bundle\CodeConversationBundle\Entity\Project" table="projects">

        <id name="id" type="integer">
            <generator strategy="AUTO"/>
        </id>

        <field name="name" type="string" unique="true">
            <gedmo:sluggable />
        </field>

        <field name="slug" type="string" unique="true">
            <gedmo:slug unique="true" updatable="false" />
        </field>

        <field name="url" type="text" />

        <field name="username" type="string" nullable="true" />

        <field name="password" type="string" nullable="true" />

        <one-to-many target-entity="Branch" mapped-by="project" field="branches">
            <cascade>
                <cascade-all/>
            </cascade>
        </one-to-many>

        <one-to-many target-entity="PullRequest" mapped-by="project" field="pullRequests" />

        <many-to-one target-entity="Branch" field="headBranch">
            <join-column name="headbranch_id" nullable="false" />
        </many-to-one>

    </entity>

</doctrine-mapping>