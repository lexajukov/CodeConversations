<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="opensoft_codeconversation.git.builder.class">Opensoft\Bundle\CodeConversationBundle\Git\Builder</parameter>
        <parameter key="opensoft_codeconversation.profile.form.type.class">Opensoft\Bundle\CodeConversationBundle\Form\Type\ProfileFormType</parameter>
        <parameter key="opensoft_codeconversation.validator.branch_point.class">Opensoft\Bundle\CodeConversationBundle\Validator\BranchPointValidator</parameter>
        <parameter key="opensoft_conversation.twig.extension.git_author_alias.class">Opensoft\Bundle\CodeConversationBundle\Twig\GitAuthorAliasExtension</parameter>
    </parameters>

    <services>
        <service id="opensoft_codeconversation.git.builder" class="%opensoft_codeconversation.git.builder.class%">
            <argument>%kernel.root_dir%/GitRepositories</argument>
            <argument>/usr/bin/git</argument>
        </service>

        <!-- Forms -->
        <service id="opensoft_codeconversation.profile.form.type" class="%opensoft_codeconversation.profile.form.type.class%">
            <tag name="form.type" alias="opensoft_codeconversation_profile" />
            <argument>%fos_user.model.user.class%</argument>
        </service>

        <!-- Validation -->
        <service id="opensoft_codeconversation.validator.branch_point" class="%opensoft_codeconversation.validator.branch_point.class%">
            <tag name="validator.constraint_validator" alias="opensoft_codeconversation.validator.branch_point" />
            <argument type="service" id="opensoft_codeconversation.git.builder" />
        </service>

        <!-- Twig extensions -->
        <service id="opensoft_conversation.twig.extension.git_author_alias" class="%opensoft_conversation.twig.extension.git_author_alias.class%">
            <tag name="twig.extension" alias="git_author_alias" />
            <argument type="service" id="doctrine" />
        </service>
    </services>
</container>
