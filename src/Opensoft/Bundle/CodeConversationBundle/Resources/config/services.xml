<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="opensoft_codeconversation.git.builder.class">Opensoft\Bundle\CodeConversationBundle\Git\Builder</parameter>
        <parameter key="opensoft_codeconversation.manager.project.class">Opensoft\Bundle\CodeConversationBundle\Entity\ProjectManager</parameter>
        <parameter key="opensoft_codeconversation.converter.project.class">Opensoft\Bundle\CodeConversationBundle\Request\ParamConverter\ProjectParamConverter</parameter>

        <!--<parameter key="opensoft_codeconversation.validator.branch_point.class">Opensoft\Bundle\CodeConversationBundle\Validator\BranchPointValidator</parameter>-->
        <!--<parameter key="opensoft_codeconversation.validator.one_pull_request_per_branch.class">Opensoft\Bundle\CodeConversationBundle\Validator\OnePullRequestPerBranchValidator</parameter>-->

    </parameters>

    <services>
        <service id="opensoft_codeconversation.git.builder" class="%opensoft_codeconversation.git.builder.class%">
            <argument>%kernel.root_dir%/GitRepositories</argument>
            <argument>/usr/bin/git</argument>
        </service>

        <service id="opensoft_codeconversation.manager.project" class="%opensoft_codeconversation.manager.project.class%">
            <argument type="service" id="opensoft_codeconversation.git.builder" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument>Opensoft\Bundle\CodeConversationBundle\Entity\Project</argument>
        </service>

        <service id="opensoft_codeconversation.converter.project" class="%opensoft_codeconversation.converter.project.class%">
            <tag name="request.param_converter" />
            <argument type="service" id="opensoft_codeconversation.manager.project" />
            <argument>Opensoft\Bundle\CodeConversationBundle\Model\ProjectInterface</argument>
        </service>


        <!--<service id="opensoft_codeconversation.validator.branch_point" class="%opensoft_codeconversation.validator.branch_point.class%">-->
            <!--<tag name="validator.constraint_validator" alias="opensoft_codeconversation.validator.branch_point" />-->
            <!--<argument type="service" id="opensoft_codeconversation.git.builder" />-->
        <!--</service>-->

        <!--<service id="opensoft_codeconversation.validator.one_pull_request_per_branch" class="%opensoft_codeconversation.validator.one_pull_request_per_branch.class%">-->
            <!--<tag name="validator.constraint_validator" alias="opensoft_codeconversation.validator.one_pull_request_per_branch" />-->
            <!--<argument type="service" id="doctrine" />-->
        <!--</service>-->
    </services>
</container>
