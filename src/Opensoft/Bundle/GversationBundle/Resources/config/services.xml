<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="opensoft_gversation.git.builder.class">Opensoft\Bundle\GversationBundle\Git\Builder</parameter>
    </parameters>

    <services>
        <service id="opensoft_gversation.git.builder" class="%opensoft_gversation.git.builder.class%">
            <argument>%kernel.cache_dir%/opensoft_repos</argument>
            <argument>/usr/bin/git</argument>
        </service>
    </services>
</container>
