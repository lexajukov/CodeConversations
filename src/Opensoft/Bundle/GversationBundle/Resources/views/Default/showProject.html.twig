{% extends 'OpensoftGversationBundle::layout.html.twig' %}

{% block page_title %}Project {{ project.name|title }}{% endblock %}

{% block content %}
    <h2>Recent Commits</h2>
    {% for commit in recentCommits %}
        {% include 'OpensoftGversationBundle::commit.html.twig' with {'commit': commit, 'project': project} %}
    {% endfor %}

    {% if project.pullRequests %}
        <h2>Pull Requests</h2>

        {% for pullRequest in project.pullRequests %}
            <div class="well">
                <h3>{{ pullRequest.title }}</h3>
                <a class="btn" href="{{ path('opensoft_gversation_default_viewpullrequest', {'pullId': pullRequest.id, 'projectId': project.id}) }}">View pull request</a>
            </div>
        {% endfor %}
    {% endif %}


    <h2>Branches</h2>

    {% for branch in project.branches %}
        <div class="well">
            <h3>{{ branch.name }}</h3>
        </div>
    {% endfor %}
{% endblock %}